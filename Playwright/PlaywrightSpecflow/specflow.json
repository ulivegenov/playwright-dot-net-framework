{
  "$schema": "https://specflow.org/specflow-config.json",

  "bindingCulture": {
    "language": "en-us"
  },

  "language": {
    "feature": "en-us"
  },

  "stepAssemblies": [
    { "assembly": "PlaywrightSpecflow" }
  ],

  "ide": {
    "editor": {
      "gherkinFormat": {
        "indentExamples": true,
        "indentExamplesTable": true,
        "indentFeatureChildren": true
      }
    }
  },

  "NRetrySettings": {
    "maxRetries": 3,
    "applyGlobally": false
  },

  "pluginparameters": {
    "variantkey": "Browser"
  }
}
